{
    "manifest_version": 2,
    "name": "FOS APEX Builder Extension",
    "short_name": "FOS",
    "description": "The FOS APEX Builder Extension is a free and open-source browser extension that enhances the Oracle APEX Builder.",
    "version": "0.2.0",
    "author": "FOEX GmbH",
    "homepage_url": "http://www.foex.at",
    "icons": {
        "128": "assets/icons/FOS_browser_extension_128x128.png"
    },
    "browser_action": { 
        "default_icon": "assets/icons/FOS_browser_extension_128x128.png" 
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*f?p=4000:40:*",
                "*://*/*f?p=4000:312:*",
                "*://*/*f?p=4000:4410:*"
            ],
            "js": [
                "main.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        "*"
    ]
}